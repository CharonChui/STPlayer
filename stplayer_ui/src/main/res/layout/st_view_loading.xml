<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ProgressBar
        android:id="@id/st_ui_view_loading_progressbar"
        android:layout_width="@dimen/st_video_play_progressbar_width"
        android:layout_height="@dimen/st_video_play_progressbar_height"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/st_component_loading"
        android:indeterminateDuration="2000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading" />

    <TextView
        android:id="@id/st_ui_view_loading_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/xxxk_s"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

</LinearLayout>